II. app/ Directory Files
| Path | Description |
|---|---|
| app/build.gradle.kts | Configures dependencies (Compose, Navigation). |
// --- app/build.gradle.kts ---
plugins {
    id("com.android.application")
    kotlin("android")
}

android {
    namespace = "com.javatutor.app"
    compileSdk = 35

    defaultConfig {
        applicationId = "com.javatutor.app"
        minSdk = 26
        targetSdk = 35
        versionCode = 1
        versionName = "1.0"
    }

    buildFeatures {
        compose = true
    }

    composeOptions {
        kotlinCompilerExtensionVersion = "1.5.15"
    }
}

dependencies {
    val composeVersion = "1.7.5" 

    // Core Android and Compose dependencies
    implementation("androidx.activity:activity-compose:1.9.2")
    implementation("androidx.compose.ui:ui:$composeVersion")
    implementation("androidx.compose.material3:material3:1.3.0")
    
    // Navigation
    implementation("androidx.navigation:navigation-compose:2.8.2")
    
    // UI Tooling (for preview)
    debugImplementation("androidx.compose.ui:ui-tooling:$composeVersion")
    debugImplementation("androidx.compose.ui:ui-test-manifest:$composeVersion")
}

